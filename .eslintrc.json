{
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended",
    "prettier",
    "next/typescript"
  ],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": false,
        "endOfLine": "auto"
      }
    ]
  }
}
